{
  "resourceType": "CapabilityStatement",
  "id": "mh-toc-capability-smm-procedures",
  "url": "http://fhir.org/guides/astp/postpartum-toc/CapabilityStatement/mh-toc-capability-smm-procedures",
  "version": "1.0.0",
  "name": "MHTOCCapability_SMMProcedures",
  "title": "Server Capability \u2013 MH TOC SMM Procedures",
  "status": "active",
  "date": "2025-09-09",
  "description": "All Severe Maternal Morbidity (SMM) Procedure profiles supported by this server, advertised under Procedure.",
  "kind": "capability",
  "fhirVersion": "4.0.1",
  "software": {
    "name": "MH TOC FHIR Server",
    "version": "1.0.0"
  },
  "format": [
    "json",
    "xml"
  ],
  "rest": [
    {
      "mode": "server",
      "documentation": "This server supports retrieving Procedures conforming to MH TOC SMM Procedure profiles.",
      "security": {
        "cors": true,
        "service": [
          {
            "coding": [
              {
                "system": "http://terminology.hl7.org/CodeSystem/restful-security-service",
                "code": "SMART-on-FHIR",
                "display": "SMART-on-FHIR"
              }
            ],
            "text": "OAuth2 with SMART-on-FHIR"
          }
        ]
      },
      "resource": [
        {
          "type": "Patient",
          "profile": "http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient",
          "interaction": [
            {
              "code": "read"
            },
            {
              "code": "search-type"
            }
          ],
          "searchParam": [
            {
              "name": "identifier",
              "type": "token"
            },
            {
              "name": "name",
              "type": "string"
            },
            {
              "name": "birthdate",
              "type": "date"
            }
          ]
        },
        {
          "type": "Encounter",
          "profile": "http://hl7.org/fhir/us/core/StructureDefinition/us-core-encounter",
          "interaction": [
            {
              "code": "read"
            },
            {
              "code": "search-type"
            }
          ],
          "searchParam": [
            {
              "name": "patient",
              "type": "reference"
            },
            {
              "name": "date",
              "type": "date"
            }
          ]
        },
        {
          "type": "Procedure",
          "profile": "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure",
          "supportedProfile": [
            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure-blood-transfusion",
            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure-conversion-cardiac-rhythm",
            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure-hysterectomy",
            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure-temporary-tracheostomy",
            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-procedure-ventilation"
          ],
          "interaction": [
            {
              "code": "read"
            },
            {
              "code": "search-type"
            }
          ],
          "searchParam": [
            {
              "name": "patient",
              "type": "reference"
            },
            {
              "name": "encounter",
              "type": "reference"
            },
            {
              "name": "date",
              "type": "date"
            },
            {
              "name": "code",
              "type": "token"
            },
            {
              "name": "status",
              "type": "token"
            }
          ]
        }
      ]
    }
  ]
}