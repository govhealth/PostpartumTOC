{
    "resourceType": "StructureDefinition",
    "id": "mh-toc-smm-condition",
    "url": "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-condition",
    "version": "1.0.0",
    "name": "MHTOCSMMCondition",
    "title": "MH TOC Severe Maternal Morbidity Condition",
    "status": "active",
    "date": "2025-07-28",
    "description": "The MH TOC Severe Maternal Morbidity Condition Profile is derived from the US Core Condition Enounter Diagnosis Profile. It defines the common requirements for representing groups of diagnoses and their constituent mappings to a single Severe Maternal Morbidity Indicator.  For examples, please see the instances of the individual derivative profiles.",
    "fhirVersion": "4.0.1",
    "kind": "resource",
    "abstract": false,
    "type": "Condition",
    "baseDefinition": "http://hl7.org/fhir/us/core/StructureDefinition/us-core-condition-encounter-diagnosis",
    "derivation": "constraint",
    "differential": {
        "element": [
            {
                "id": "Condition.extension:smmIndicator",
                "path": "Condition.extension",
                "sliceName": "smmIndicator",
                "short": "SMM Indicator",
                "definition": "Identifies the SMM indicator category for this condition.",
                "min": 1,
                "max": "1",
                "mustSupport": true,
                "type": [
                    {
                        "code": "Extension",
                        "profile": [
                            "http://fhir.org/guides/astp/postpartum-toc/StructureDefinition/mh-toc-smm-indicator"
                        ]
                    }
                ]
            },
            {
                "id": "Condition.code",
                "path": "Condition.code",
                "binding": {
                "strength": "extensible",
                "valueSet": "http://fhir.org/guides/astp/postpartum-toc/ValueSet/mh-toc-smm-category-group"
                } 
            },           
            {
                "id": "Condition.encounter",
                "path": "Condition.encounter",
                "min": 1
            }
        ]
    }
}